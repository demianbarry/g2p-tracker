<?xml version="1.0" encoding="UTF-8"?>

<!-- Indic칩 la taglib para poder llamar a la funci칩n que recupera los labels de acuerdo al idioma del navegador -->
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<!-- Instancio el DataBinder estadar, que vincula cada anotacion ${...} con el objeto correspondiente -->
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" arg0="./abmMenuWin"?>

<zk xmlns="http://www.zkoss.org/2005/zul" >
    <window id="abmMenuWin" title="Administrar P치ginas" use="org.g2p.tracker.controllers.AbmMenuController" width="100%"  height="100%"  >
        <panel title="P치ginas" collapsible="true" framable="true">
            <panelchildren>
                <vbox>
                    <hbox>
                <!-- botones ejecutadores -->
                        <button id="btnBaja"
                            label="DarBaja"
                            />
                        <button id="btnAlta"
                            label="DarAlta"
                            />
                    </hbox>
                    <listbox id="lbPaginas"
                            multiple="true"
                            height="100%"
                            oddRowSclass="non-odd"
                            fixedLayout="true"
                            checkmark="true"
                            >
                    </listbox>

                        
                </vbox>
            </panelchildren>
        </panel>

        <panel title="Menues" collapsible="true" framable="true">
            <panelchildren>
                <vbox>
                    <hbox>
                        <button id="btnAceptar" label="Aceptar" />
                        <button id="btnAplicar" label="Aplicar" />
                        <button id="btnCancelar" label="Cancelar" />
                        <button id="btnDesSel" label="Desmarcar todo" />
                        <button id="btnSel" label="Marcar todo" />
                    </hbox>
                    <grid>
                        <columns>
                            <column label="Seleccionar" />
                            <column label="Nombre" />
                            <column label="Descripcion" />
                            <column label="URL" />
                            <column label="Grupo" />
                        </columns>
                        <rows id="filas" >
                                <!--
                                se cargan los menues
                                -->
                        </rows>
                    </grid>
                </vbox>
            </panelchildren>
        </panel>
        <panel title="Accesos" collapsible="true" framable="true">
            <panelchildren>
                <vbox>
                    <hbox>
                        <button id="btnAsociar" label="Asociar" />
                        <button id="btnDesasociar" label="Desasociar"/>
                    </hbox>
                    <columnlayout>
				<!-- descripcion del menu seleccionado -->
                        <columnchildren width="50%">
                            <panel title="Roles:" height="">
                                <panelchildren>
                                    <listbox id="lbRoles"
                            width=""
                            height=""
                            multiple="true"
                            checkmark="true"
                            oddRowSclass="non-odd"
                            fixedLayout="true"
                            >
                                    </listbox>
                                </panelchildren>
                            </panel>
                        </columnchildren>
                 <!-- grupos -->
                        <columnchildren width="50%">
                            <panel title="Usuarios:" height="">
                                <panelchildren>
                                    <listbox id="lbUsuarios"
                            multiple="true"
                            height="100%"
                            oddRowSclass="non-odd"
                            fixedLayout="true"
                            checkmark="true"
                            >
                                    </listbox>
                                </panelchildren>
                            </panel>
                        </columnchildren>
                    </columnlayout>
                </vbox>
            </panelchildren>
        </panel>
</window>
</zk>
